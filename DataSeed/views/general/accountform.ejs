<%include ../partials/header%>


<div style="color:black;" class="container">
    <div class="row">
    <!--col-xs-12 col-md-4 col-sm-6-->
    <div class="col-md-4"></div>
    
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Payment Details
                    </h3>
                </div>
                <div class="panel-body">
                
              
                
                
            <form  action='/general/account/setting' method="POST">
      
                      
                      <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="couponCode">Card Holder Name</label>
                                    <input required type="text" class="form-control" maxlength="25" name="accountholder" />
                                </div>
                            </div>                        
                        </div>
                      
                    <div class="form-group">
                        <label for="cardNumber">
                            Card Number</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="cardNumber"  name="accountnumber" placeholder="Valid Card Number"
                                required autofocus />
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-7 col-md-7">
                            <div class="form-group">
                                <label for="expityMonth">Expiry Date</label>
                                <div class="col-xs-12 col-lg-12">
                                  <div class="col-xs-6 col-lg-6 ">
                                    <input type="text" class="form-control" id="expityMonth" name="expirymonth" minlength="2" maxlength="2" placeholder="MM" required />
                                </div>
                                <div class="col-xs-6 col-lg-6 ">
                                    <input type="text" class="form-control" id="expityYear" name="expiryyear" minlength="2" maxlength="2" placeholder="YY" required />
                                </div>
                              </div>
                            </div>
                        </div>
                        <div class="col-xs-5 col-md-5 pull-right">
                            <div class="form-group">
                                <label for="cvCode">
                                    CVV Code</label>
                                <input type="password" class="form-control" id="cvCode" minlength="3" maxlength="3" name="cvv" placeholder="3-digit CVV " required />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg btn-block" >Pay Now</button>
            <ul class="nav nav-pills nav-stacked">
            <br>
                <li class="active"><a href="#"><span class="badge pull-right"><span class="glyphicon glyphicon-usd"></span>4200</span> Final Payment</a>
                </li>
            </ul>
                    </form>
                </div>
            </div>
            
            <br/>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

<%include ../partials/footer%>
